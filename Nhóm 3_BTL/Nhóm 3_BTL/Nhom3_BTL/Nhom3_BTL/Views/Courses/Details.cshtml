@model Nhom3_BTL_NguyenDuyHung.Models.Courses

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        /* Định dạng tổng quan */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9;
            color: #333;
        }

        /* Container chính */
        div {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Tiêu đề */
        h4 {
            font-size: 1.5em;
            color: #0d6efd;
            text-align: center;
            margin-bottom: 20px;
            text-transform: uppercase;
        }

        /* Định dạng danh sách thông tin */
        dl {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        dt {
            flex: 1 1 40%;
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

        dd {
            flex: 1 1 60%;
            margin-left: 0;
            margin-bottom: 10px;
            color: #333;
        }

        /* Định dạng liên kết */
        p {
            text-align: center;
            margin-top: 20px;
        }

        a {
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
            color: #ffffff;
            background-color: #5bc0de;
            margin: 0 5px;
            transition: background-color 0.3s ease;
        }

            a:hover {
                background-color: #31b0d5;
            }
    </style>
</head>
<body>
    <div>
        <h4>Khóa học</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên khóa học:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tenKhoaHoc)
            </dd>

            <dt>
                Mô tả:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.moTa)
            </dd>

            <dt>
                Giá:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.gia)
            </dd>

            <dt>
                Ngày tạo:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ngayTao)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.maKhoaHoc }) |
        @Html.ActionLink("Quay trở lại", "Index")
    </p>
</body>
</html>
