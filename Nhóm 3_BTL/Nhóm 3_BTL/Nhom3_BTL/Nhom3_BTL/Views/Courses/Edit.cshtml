@model Nhom3_BTL_NguyenDuyHung.Models.Courses

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        /* Cài đặt tổng thể */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 20px;
        }

        /* Container của form */
        .form-horizontal {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Tiêu đề chính */
        h4 {
            text-align: center;
            color: #0d6efd;
            margin-bottom: 20px;
            font-size: 1.5em;
            text-transform: uppercase;
        }

        /* Định dạng nhãn (label) */
        .control-label {
            font-weight: bold;
            color: #555;
        }

        /* Định dạng các ô nhập liệu */
        .form-control {
            width: 95%;
            padding: 10px;
            font-size: 14px;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 4px;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #5bc0de;
                outline: none;
                box-shadow: 0 0 5px rgba(91, 192, 222, 0.5);
            }

        /* Hiển thị đầy đủ nội dung trong textarea */
        textarea.form-control {
            resize: none; /* Không cho phép thay đổi kích thước */
            overflow: auto; /* Thanh cuộn khi nội dung vượt quá */
            height: auto; /* Tự điều chỉnh chiều cao */
            min-height: 100px; /* Đặt chiều cao tối thiểu */
            max-height: 300px; /* Đặt chiều cao tối đa */
        }

        /* Định dạng thông báo lỗi */
        .text-danger {
            color: #d9534f;
            font-size: 13px;
            margin-top: 5px;
        }

        /* Định dạng nhóm form */
        .form-group {
            margin-bottom: 20px;
        }

        /* Định dạng nút */
        .btn {
            padding: 10px 20px;
            font-size: 14px;
            color: #fff;
            background-color: #5bc0de;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #31b0d5;
            }

        /* Định dạng liên kết */
        a {
            text-decoration: none;
            color: #5bc0de;
            font-size: 14px;
        }

            a:hover {
                color: #31b0d5;
                text-decoration: underline;
            }

        /* Căn giữa nút và liên kết */
        .form-actions {
            text-align: center; /* Căn giữa nội dung */
            margin-top: 20px;
        }

            .form-actions .btn {
                display: inline-block;
                margin-right: 10px; /* Khoảng cách giữa nút và liên kết nếu cần */
            }

            .form-actions a {
                display: inline-block;
                margin-top: 10px;
                font-size: 14px;
                color: #5bc0de;
            }

                .form-actions a:hover {
                    text-decoration: underline;
                    color: #31b0d5;
                }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Khóa học</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.maKhoaHoc)

            <div class="form-group">
                Tên khóa học
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenKhoaHoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenKhoaHoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mô tả
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.moTa, new { @class = "form-control", @rows = "5" })
                    @Html.ValidationMessageFor(model => model.moTa, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                Giá
                <div class="col-md-10">
                    @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Ngày tạo
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ngayTao, new { @class = "form-control", @type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.ngayTao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-actions">
                <input type="submit" value="Save" class="btn btn-default" />
                <br />
                @Html.ActionLink("Quay trở lại", "Index", null, new { @class = "btn-link" })
            </div>

        </div>
    }

</body>
</html>
