@model IEnumerable<Nhom3_BTL_NguyenDuyHung.Models.Admin>

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Admin</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTable CSS -->
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <!-- DataTable Buttons CSS -->
    <link href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/csshocta/study.css">
    <style>
        <style >
        /* Nền cho toàn bộ giao diện */
        body {
            background-color: #f8f9fa; /* Màu nền sáng */
            color: #343a40; /* Màu chữ chính */
        }

        /* Tiêu đề */
        h1 {
            color: #0d6efd; /* Màu xanh chủ đạo */
            font-weight: bold;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Các nút */
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #1e7e34; /* Màu xanh lục khi hover */
                border-color: #1c7430;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #117a8b;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #0d6efd;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #c82333;
        }

            .btn-danger:hover {
                background-color: #bd2130;
                border-color: #ac1c1c;
            }

        /* Bảng dữ liệu */
        #adminTable {
            width: 100%; /* Bảng full width */
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
        }

            #adminTable th {
                background-color: #343a40; /* Nền xám đậm */
                color: #f8f9fa; /* Màu chữ sáng */
                padding: 10px;
            }

            #adminTable td {
                border-bottom: 1px solid #dee2e6; /* Đường kẻ nhẹ */
                padding: 10px;
            }

            #adminTable tr:nth-child(odd) {
                background-color: #f8f9fa; /* Màu nền sáng cho các dòng lẻ */
            }

            #adminTable tr:nth-child(even) {
                background-color: #e9ecef; /* Màu nền sáng hơn cho các dòng chẵn */
            }

            #adminTable tr:hover {
                background-color: #d6e9f9; /* Màu xanh nhẹ khi hover */
                transition: background-color 0.3s;
            }
    </style>

</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_toggle"> <img src="/img/logo.svg" alt=""> </div>
        <div class="header_img"> <img src="/img/user-286.svg" alt=""> </div>
    </header>
    <div class="l-navbar mt-lg-5" id="nav-bar">
        <nav class="nav">
            <div>
                <div class="nav_list">
                    <a href="@Url.Action("Index", "Admins")" class="nav_link active" title="Quản lý Admin">
                        <i><img src="/img/over_view_active.svg" alt="Icon"></i>
                        <span class="nav_name">Quản lý Admin</span>
                    </a>
                    <a href="@Url.Action("Index", "Answers")" class="nav_link" title="Quản lý Admin">
                        <i><img src="/img/study_plan.svg"></i>
                        <span class="nav_name">Quản lý đáp án</span>
                    </a>
                    <a href="@Url.Action("Index", "Courses")" class="nav_link" title="Quản lý Admin">
                        <i><img src="/img/my_courses.svg"></i>
                        <span class="nav_name">Quản lý khóa học</span>
                    </a>
                    <a href="@Url.Action("Index", "Enrollments")" class="nav_link" title="Quản lý Admin">
                        <i><img src="/img/test_practice.svg"></i>
                        <span class="nav_name">Quản lý điểm</span>
                    </a>
                    <a href="@Url.Action("Index", "Grades")" class="nav_link" title="Quản lý Admin">
                        <i><img src="/img/learning_profile.svg"></i>
                        <span class="nav_name">Quản lý bài học</span>
                    </a>
                    <a href="@Url.Action("Index", "Lessons")" class="nav_link" title="Quản lý Admin">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Quản lý đáp án</span>
                    </a>
                    <a href="@Url.Action("Index", "questions")" class="nav_link" title="Quản lý Admin">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Quản lý kiểm tra</span>
                    </a>
                    <a href="@Url.Action("Index", "tests")" class="nav_link" title="Quản lý Admin">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Quản lý người dùng</span>
                    </a>
                    <a href="@Url.Action("Index", "users")" class="nav_link" title="Quản lý Admin">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Quản lý người dùng</span>
                    </a>
                </div>
            </div>
            <div class="bt-out">
                <a href="#" class="nav_link">
                    <i class='bx bx-log-out nav_icon'></i>
                    <span class="nav_name">Về trang chủ</span>
                </a>
            </div>

        </nav>
    </div>

    <div class="height-100 bg-light">
        <h1 style="color:black; text-align:center;">Quản lý Admin</h1>
        <p>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table id="adminTable" class="display" style="">
            <thead>
                <tr>
                    <th>
                        Tài Khoản
                    </th>
                    <th>
                        Mật Khẩu
                    </th>
                    <th>Chức Năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenTaiKhoan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.matKhau)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa ", "Edit", new { id = item.tenTaiKhoan }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Thông tin", "Details", new { id = item.tenTaiKhoan }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.tenTaiKhoan }, new { @class = "btn btn-danger btn-sm" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#adminTable').DataTable({
                dom: "<'row'<'col-sm-2'l><'col-sm-4'f><'col-sm-6 text-right'B>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-7'p>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> Xuất Excel',
                        className: 'btn btn-success'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fas fa-file-csv"></i> Xuất CSV',
                        className: 'btn btn-info'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> Xuất PDF',
                        className: 'btn btn-danger'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> In bảng',
                        className: 'btn btn-secondary'
                    }
                ]
            });
        });
    </script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="/js/study.js"></script>
    </div>
</body>
</html>




